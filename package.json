{
  "name": "newrelic-mcp-server",
  "version": "1.0.0",
  "description": "MCP server for querying New Relic logs",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "newrelic-mcp-server": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "start": "node dist/index.js",
    "dev": "tsc && node dist/index.js",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage"
  },
  "keywords": [
    "mcp",
    "newrelic",
    "logs",
    "model-context-protocol"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "axios": "^1.7.9",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@types/axios-mock-adapter": "^1.9.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.5",
    "axios-mock-adapter": "^2.1.0",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.5",
    "typescript": "^5.7.2"
  }
}
